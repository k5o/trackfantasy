.page.new-user
  .container
    .info-card
      .info-card-title
        %h1 Sign Up
      .info-card-content
        %h3 Nice! Let's get you set up.

        = form_tag '', class: 'signup-form' do
          / - if @user.errors.any?
          /   .error-messages
          /     %ul
          /       - for message in @user.errors.full_messages
          /         %li= message
          .text-field-container
            = email_field_tag :email, '', placeholder: 'Email', id: 'email', autofocus: true
          .text-field-container
            = password_field_tag :password, '', placeholder: 'Password', id: 'password', class: 'submit-input'
          = hidden_field_tag :plan, @plan
          = submit_tag 'Next', class: 'btn'
